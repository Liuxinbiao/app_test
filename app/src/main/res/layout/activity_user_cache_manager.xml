<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/huancunguanli"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/huancun_manager"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_tab_menu"
        android:paddingTop="6dp"
        android:text="  ←缓存管理"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/huancunguanli_all"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/huancun_manager"
        android:background="@drawable/bg_btn4_white"
        android:clickable="true"
        android:paddingTop="12dp"
        android:text="清除聊天缓存"
        android:textColor="#3C3C3C"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/huancunguanli_map"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/huancunguanli_all"
        android:background="@drawable/bg_btn4_white"
        android:paddingTop="12dp"
        android:text="清除地图缓存"
        android:clickable="true"
        android:textColor="#3C3C3C"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/huancunguanli_other"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/huancunguanli_map"
        android:background="@drawable/bg_btn4_white"
        android:paddingTop="12dp"
        android:text="清除其他缓存"
        android:clickable="true"
        android:textColor="#3C3C3C"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/huancunguanli_manager"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="194dp"
        android:background="@drawable/bg_btn4_white"
        android:paddingTop="12dp"
        android:clickable="true"
        android:text="管理缓存途径"
        android:textColor="#3C3C3C"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/huancunguanli_other"
        android:background="#DDDDDD" />
</RelativeLayout>