<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="32dp"
        android:textSize="16sp"
        android:text="手机号"
        android:textColor="#030E03"
        />

    <Button
        android:id="@+id/change_iphon_num"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:layout_alignEnd="@+id/weixin_switch1"
        android:layout_alignTop="@+id/textView33"
        android:background="@drawable/ic_btn1"
        android:backgroundTint="#33CC33"
        android:text="更改手机号"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/weixin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView33"
        android:layout_marginTop="141dp"
        android:text="微信"
        android:textColor="#030E03"
        android:textSize="16sp" />

    <Switch
        android:id="@+id/weixin_switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/weixin"
        android:layout_marginEnd="33dp"
        />

    <TextView
        android:id="@+id/weibo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView33"
        android:layout_centerVertical="true"
        android:text="微博"
        android:textColor="#030E03"
        android:textSize="16sp" />

    <Switch
        android:id="@+id/weibo_switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/weixin_switch1"
        android:layout_marginTop="226dp" />

    <TextView
        android:id="@+id/qq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView33"
        android:layout_marginBottom="154dp"
        android:text="QQ"
        android:textSize="16sp"
        android:textColor="#030E03"/>

    <Switch
        android:id="@+id/qq_switch3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/change_iphon_num"
        android:layout_alignTop="@+id/qq" />

    <Button
        android:id="@+id/tuichu_button"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp"
        android:background="@drawable/bg_btn4_white"
        android:text="退出"
        android:textColor="#33CC33" />

    <TextView
        android:id="@+id/textView38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="106dp"
        android:text="第三方账号登陆" />
</RelativeLayout>