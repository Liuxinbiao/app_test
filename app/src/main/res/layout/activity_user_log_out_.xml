<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/user_log"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/user_certain_pw_agin"
        android:background="@drawable/ic_btn1"
        android:drawablePadding="5dp"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:text="请输入用户名"
        android:textColor="#CCCCCC"
        android:textSize="17sp"
        />

    <TextView
        android:id="@+id/usersetting_user"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:text="用户名"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/user_iphon_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="44dp"
        android:text="手机号"
        android:textColor="#000000"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/iphon_num"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/user_log"
        android:layout_alignTop="@+id/user_iphon_num"
        android:background="@drawable/ic_btn1"
        android:ems="10"
        android:hint="请输入手机号"
        android:inputType="phone"
        android:paddingLeft="8dp"
        android:textColor="#CCCCCC" />

    <TextView
        android:id="@+id/user_DAOYOU"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="174dp"
        android:text="你要注册的身份是"
        android:textColor="#000000"
        android:textSize="18sp"/>

    <CheckBox
        android:id="@+id/user_shenfeng_daoyou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/user_DAOYOU"
        android:text="导游" />

    <CheckBox
        android:id="@+id/user_shenfen_youke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="游客" />

    <TextView
        android:id="@+id/user_pw_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText6"
        android:layout_alignParentStart="true"
        android:text="密码"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/user_certain_pw_agin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="128dp"
        android:text="确认密码"
        android:textColor="#000000"
        android:textSize="18sp" />


    <EditText
        android:id="@+id/editText6"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/user_log"
        android:layout_marginTop="83dp"
        android:background="@drawable/ic_btn1"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#CCCCCC"
        android:paddingLeft="8dp" />


    <EditText
        android:id="@+id/editText8"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/user_certain_pw_agin"
        android:layout_toEndOf="@+id/user_certain_pw_agin"
        android:background="@drawable/ic_btn1"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#CCCCCC"
        android:paddingLeft="8dp"
        />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/user_shenfen_youke"
        android:text="所在城市"
        android:textColor="#000000"
        android:textSize="18sp"/>

    <Spinner
        android:id="@+id/user_city_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/user_button2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="79dp"
        android:layout_toEndOf="@+id/user_pw_input"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="注册"
        android:textColor="#fff"
        android:textSize="20sp"
        android:background="@drawable/bg_btn4"/>


</RelativeLayout>