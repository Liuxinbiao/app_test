<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:id="@+id/frame1">

    <ImageView
        android:id="@+id/luntan_beijing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/nav_header_desc"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        app:srcCompat="@drawable/user_icon" />

    <TextView
        android:id="@+id/person_data_111"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/luntan_beijing"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="昵称"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#4D4D4D" />

    <TextView
        android:id="@+id/person_gexingqianming1"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/luntan_beijing"
        android:layout_marginTop="104dp"
        android:text="个性签名"
        android:textColor="#4D4D4D" />

    <TextView
        android:id="@+id/person_data_fensi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/person_data_guanzhu_num"
        android:layout_centerHorizontal="true"
        android:text="粉丝"
        android:textColor="#4D4D4D" />

    <TextView
        android:id="@+id/person_data_guanzhu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/person_data_fensi"
        android:layout_toEndOf="@+id/person_data_guanzhu_num"
        android:text="关注"
        android:textColor="#4D4D4D" />

    <TextView
        android:id="@+id/person_data_dongtai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/person_data_fensi"
        android:layout_toEndOf="@+id/person_data_gexingqianming"
        android:text="动态"
        android:textColor="#4D4D4D" />

    <EditText
        android:id="@+id/person_data_nicheng11"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/luntan_beijing"
        android:layout_toEndOf="@+id/person_data_111"
        android:clickable="true"
        android:text=" 这个世界真美"
        android:focusable="false"
        android:background="@drawable/bg_btn4_white"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#555555"/>

    <EditText
        android:id="@+id/person_data_gexingqianming"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/person_gexingqianming1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_btn4_white"
        android:clickable="true"
        android:focusable="false"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=" 你有诚意，我自有敬意。"
        android:textColor="#555555"/>

    <TextView
        android:id="@+id/person_data_fans_num"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/luntan_beijing"
        android:layout_toEndOf="@+id/person_data_guanzhu"
        android:text="0"
        android:textColor="#4D4D4D" />

    <TextView
        android:id="@+id/person_data_guanzhu_num"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/luntan_beijing"
        android:layout_toEndOf="@+id/person_data_111"
        android:text="0"
        android:textColor="#4D4D4D" />

    <TextView
        android:id="@+id/person_data_dongtai_num"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/luntan_beijing"
        android:layout_toEndOf="@+id/person_data_dongtai"
        android:text="0"
        android:textColor="#4D4D4D" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/setting_all"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">


            <Button
                android:id="@+id/person_data_xiaoxi"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="149dp"
                android:background="@drawable/bg_button"
                android:text="我的消息"
                android:textColor="#4D4D4D"
                android:textSize="20sp" />

            <Button
                android:id="@+id/me_guanzhu"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/person_data_xiaoxi"
                android:background="@drawable/bg_button"
                android:text="我的关注"
                android:textColor="#4D4D4D"
                android:textSize="20sp" />

            <Button
                android:id="@+id/me_shoucang"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/me_guanzhu"
                android:text="收藏"
                android:textColor="#4D4D4D"
                android:textSize="20sp"
                android:background="@drawable/bg_button"/>

            <Button
                android:id="@+id/me_daoyou"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/me_shoucang"
                android:text="导游"
                android:textColor="#4D4D4D"
                android:textSize="20sp"
                android:background="@drawable/bg_button"/>

            <Button
                android:id="@+id/me__trip_mate"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/me_daoyou"
                android:text="驴友"
                android:textColor="#4D4D4D"
                android:textSize="20sp"
                android:background="@drawable/bg_button"/>

            <Button
                android:id="@+id/me_review"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/me__trip_mate"
                android:text="评价"
                android:textColor="#4D4D4D"
                android:textSize="20sp"
                android:background="@drawable/bg_button"/>

            <Button
                android:id="@+id/me_setting"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/me_review"
                android:text="设置"
                android:textColor="#4D4D4D"
                android:textSize="18sp"
                android:background="@drawable/bg_button"/>

            <Button
                android:id="@+id/me_share"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/me_setting"
                android:text="分享"
                android:textColor="#4D4D4D"
                android:textSize="20sp"
                android:background="@drawable/bg_button"/>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>




