<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/tab_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#3C3C3C">
        <TextView
            android:id="@+id/txt_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#555555"
            android:text= "HI!Go" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#F7F7F7"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/tab_menu"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/luntan_start_txt_deal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#E6E6E6"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/home"
            android:gravity="center"
            android:textColor="#000000"
            android:text="首页"
            android:textSize="10sp" />

        <Button
            android:id="@+id/luntan_start_txt_poi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#E6E6E6"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/found"
            android:gravity="center"
            android:textColor="#000000"
            android:text="发现"
            android:textSize="10sp"/>

        <Button
            android:id="@+id/luntan_start_txt_user"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#E6E6E6"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/chat"
            android:gravity="center"
            android:textColor="#000000"
            android:text="论坛"
            android:textSize="10sp"/>

        <Button
            android:id="@+id/luntan_start_txt_more"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#E6E6E6"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/me"
            android:gravity="center"
            android:textColor="#000000"
            android:text="我"
            android:textSize="10sp"/>

    </LinearLayout>

    <View
        android:id="@+id/div_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#808080"
        android:layout_above="@id/tab_menu"/>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tab_title"
        android:layout_above="@id/tab_menu"
        android:background="#FFFFFF">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="400dp">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/luntan_beijing"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:background="@drawable/gugong"
                        android:clickable="true"
                        android:text="北京"
                        android:textSize="18dp"
                        android:textColor="#555555"/>
                    <TextView
                        android:id="@+id/luntan_shanghai"
                        android:layout_width="match_parent"
                        android:layout_below="@id/luntan_beijing"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:background="@drawable/shasnghai"
                        android:clickable="true"
                        android:text="上海"
                        android:textSize="18dp"
                        android:textColor="#555555"/>
                    <TextView
                        android:id="@+id/luntan_tianjin"
                        android:layout_width="match_parent"
                        android:layout_below="@id/luntan_shanghai"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:background="@drawable/tianjin"
                        android:clickable="true"
                        android:text="天津"
                        android:textSize="18dp"
                        android:textColor="#555555"/>
                    <TextView
                        android:id="@+id/luntan_yunnan"
                        android:layout_width="match_parent"
                        android:layout_below="@id/luntan_tianjin"
                        android:layout_height="70dp"
                        android:clickable="true"
                        android:layout_weight="1"
                        android:background="@drawable/chengdu"
                        android:text="成都"
                        android:textSize="18dp"
                        android:textColor="#555555"/>
                    <TextView
                        android:id="@+id/luntan_tangshan"
                        android:layout_width="match_parent"
                        android:layout_below="@id/luntan_yunnan"
                        android:layout_height="70dp"
                        android:clickable="true"
                        android:layout_weight="1"
                        android:background="@drawable/tangshan"
                        android:text="唐山"
                        android:textSize="18dp"
                        android:textColor="#555555"/>
                    <TextView
                        android:id="@+id/luntan_taiguo"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_below="@id/luntan_tangshan"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:background="@drawable/mangu"
                        android:text="曼谷"
                        android:textSize="18dp"
                        android:textColor="#555555"/>
                    <TextView
                        android:id="@+id/luntan_dali"
                        android:layout_below="@id/luntan_taiguo"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="大理"
                        android:textSize="18dp"
                        android:clickable="true"
                        android:textColor="#555555"
                        android:background="@drawable/dali"
                        />

                    <TextView
                        android:id="@+id/luntan_hangzhou"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:clickable="true"
                        android:layout_below="@+id/luntan_dali"
                        android:background="@drawable/hangzhou"
                        android:text="杭州"
                        android:textColor="#555555"
                        android:textSize="18dp" />
                </RelativeLayout>




            </ScrollView>



        </RelativeLayout>



    </FrameLayout>

</RelativeLayout>