<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/tab_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#3C3C3C">
        <TextView
            android:id="@+id/txt_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#555555"
            android:text= "HI!Go" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#F7F7F7"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/tab_menu"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/txt_deal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#E6E6E6"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/home"
            android:gravity="center"
            android:textColor="#000000"
            android:text="首页"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/txt_poi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#E6E6E6"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/found"
            android:gravity="center"
            android:textColor="#000000"
            android:text="发现"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/txt_user"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#E6E6E6"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/chat"
            android:gravity="center"
            android:textColor="#000000"
            android:text="论坛"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/txt_more"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#E6E6E6"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/me"
            android:gravity="center"
            android:textColor="#000000"
            android:text="我"
            android:textSize="10sp"/>

    </LinearLayout>

    <View
        android:id="@+id/div_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#808080"
        android:layout_above="@id/tab_menu"/>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tab_title"
        android:layout_above="@id/tab_menu"
        android:background="#FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="400dp">


            <Button
                android:id="@+id/luntan_daoyou"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="#EEEEEE"
                android:text="当地导游"
                android:textColor="#444444"
                android:textSize="15sp" />

            <Button
                android:id="@+id/luntan_youban"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/luntan_daoyou"
                android:background="#EEEEEE"
                android:text="同城游伴"
                android:textColor="#444444"
                android:textSize="15sp" />

            <Button
                android:id="@+id/luntan_daoyoubang"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/luntan_youban"
                android:background="#EEEEEE"
                android:text="导游榜"
                android:textColor="#444444"
                android:textSize="15sp" />


            <Button
                android:id="@+id/luntan_QA"
                android:layout_width="84dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/luntan_daoyoubang"
                android:background="#EEEEEE"
                android:text="  问答"
                android:textColor="#444444"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/chengdu_imageView"
                android:layout_width="132dp"
                android:layout_height="90dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/luntan_daoyou"
                app:srcCompat="@drawable/chengdu_qingchengshan" />

            <ImageView
                android:id="@+id/chengdu_imageView2"
                android:layout_width="131dp"
                android:layout_height="92dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/chegndu_daxiongma" />

            <ImageView
                android:id="@+id/chengdu_imageView3"
                android:layout_width="131dp"
                android:layout_height="88dp"
                android:layout_above="@+id/chengdu_imageView2"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/chengdu_dongwuyuan" />

            <ImageView
                android:id="@+id/chengdu_imageView4"
                android:layout_width="131dp"
                android:layout_height="88dp"
                android:layout_above="@+id/chengdu_imageView3"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/chengdu_jinlihuzhen" />


            <TextView
                android:id="@+id/chengdu_textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="49dp"
                android:layout_toEndOf="@+id/luntan_youban"
                android:text="青城山" />

            <TextView
                android:id="@+id/chengdu_textView13"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="83dp"
                android:maxLines="2"
                android:text="青城山自古素有“青城天下幽”的美誉，分前山和后山两部分，前山是青城山风景名胜区的主体，道教文化、文物古迹" />

            <TextView
                android:id="@+id/chengdu_textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/chengdu_textView18"
                android:layout_marginTop="142dp"
                android:text="锦里古街" />

            <TextView
                android:id="@+id/chengdu_textView16"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="168dp"
                android:maxLines="2"
                android:text="成都知名的步行商业街，由一大片清末建筑风格的仿古建筑组成，拥有数量众多的酒吧、餐饮名店，是西蜀历史上最古" />

            <TextView
                android:id="@+id/chengdu_textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="144dp"
                android:layout_marginEnd="105dp"
                android:text="成都动物园" />

            <TextView
                android:id="@+id/chengdu_textView19"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="102dp"
                android:maxLines="2"
                android:text="园内常年展出各种兽类、两栖爬行类、鸟类以及观赏鱼类等动物300多种，" />


            <TextView
                android:id="@+id/chengdu_textView22"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/chengdu_"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="57dp"
                android:maxLines="1"
                android:text="成都大熊猫繁育研究基地" />

            <TextView
                android:id="@+id/chengdu_"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/chengdu_textView13"
                android:maxLines="2"
                android:text="基地内有很多萌萌的大熊猫，你可以近距离的去观赏这些萌哒哒的国宝们。基地位于成都市北郊，距市区约10公里，建设" />


        </RelativeLayout>

    </FrameLayout>

</RelativeLayout>