<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/tab_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#3C3C3C">
        <TextView
            android:id="@+id/txt_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#555555"
            android:text= "HI!Go" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#F7F7F7"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/tab_menu"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/txt_deal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#E6E6E6"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/home"
            android:gravity="center"
            android:textColor="#000000"
            android:text="首页"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/txt_poi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#E6E6E6"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/found"
            android:gravity="center"
            android:textColor="#000000"
            android:text="发现"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/txt_user"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#E6E6E6"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/chat"
            android:gravity="center"
            android:textColor="#000000"
            android:text="论坛"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/txt_more"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#E6E6E6"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/me"
            android:gravity="center"
            android:textColor="#000000"
            android:text="我"
            android:textSize="10sp"/>

    </LinearLayout>

    <View
        android:id="@+id/div_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#808080"
        android:layout_above="@id/tab_menu"/>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tab_title"
        android:layout_above="@id/tab_menu"
        android:background="#FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="400dp">


            <Button
                android:id="@+id/luntan_daoyou"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="#EEEEEE"
                android:text="当地导游"
                android:textColor="#444444"
                android:textSize="15sp" />

            <Button
                android:id="@+id/luntan_youban"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/luntan_daoyou"
                android:background="#EEEEEE"
                android:text="同城游伴"
                android:textColor="#444444"
                android:textSize="15sp" />

            <Button
                android:id="@+id/luntan_daoyoubang"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/luntan_youban"
                android:background="#EEEEEE"
                android:text="导游榜"
                android:textColor="#444444"
                android:textSize="15sp" />


            <Button
                android:id="@+id/luntan_QA"
                android:layout_width="84dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/luntan_daoyoubang"
                android:background="#EEEEEE"
                android:text="  问答"
                android:textColor="#444444"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/chengdu_imageView"
                android:layout_width="102dp"
                android:layout_height="58dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/luntan_daoyou"
                app:srcCompat="@drawable/tangshan_yuetuodao" />

            <ImageView
                android:id="@+id/chengdu_imageView2"
                android:layout_width="99dp"
                android:layout_height="63dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/tangshan_qingdongling" />

            <ImageView
                android:id="@+id/chengdu_imageView3"
                android:layout_width="101dp"
                android:layout_height="67dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/chengdu_imageView4"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/tangshan_nanhu" />

            <ImageView
                android:id="@+id/chengdu_imageView4"
                android:layout_width="100dp"
                android:layout_height="65dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/chengdu_imageView"
                android:layout_marginTop="9dp"
                app:srcCompat="@drawable/tangshan_luanzhougucheng" />

            <ImageView
                android:id="@+id/chengdu_imageView5"
                android:layout_width="99dp"
                android:layout_height="68dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/chengdu_imageView3"
                android:layout_marginTop="9dp"
                app:srcCompat="@drawable/tangshan_kailuankuangshangongyuan" />

            <TextView
                android:id="@+id/tangshan_textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/chengdu_imageView4"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="-9dp"
                android:background="#EEEEEE" />

            <TextView
                android:id="@+id/tangshan_textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/chengdu_imageView3"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="-10dp"
                android:background="#EEEEEE" />

            <TextView
                android:id="@+id/tangshan_textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/chengdu_imageView5"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="-9dp"
                android:background="#EEEEEE"/>

            <TextView
                android:id="@+id/tangshan_textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/chengdu_imageView2"
                android:layout_alignParentStart="true"
                android:background="#EEEEEE" />

            <TextView
                android:id="@+id/chengdu_textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/luntan_daoyou"
                android:layout_centerHorizontal="true"
                android:text="月坨岛" />

            <TextView
                android:id="@+id/chengdu_textView13"
                android:layout_width="250dp"
                android:maxLines="1"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tangshan_textView5"
                android:layout_alignParentStart="true"
                android:layout_marginStart="122dp"
                android:text="月坨岛位于唐山市乐亭县西南侧的渤海湾中，" />

            <TextView
                android:id="@+id/tangshan_textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="118dp"
                android:text="滦州古城" />

            <TextView
                android:id="@+id/tangshan_textView16"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tangshan_textView6"
                android:layout_alignStart="@+id/chengdu_textView13"
                android:maxLines="1"
                android:text="滦州古城位于唐山市滦县滦州镇，是华" />

            <TextView
                android:id="@+id/tangshan_textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="南湖公园" />

            <TextView
                android:id="@+id/tangshan_textView19"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tangshan_textView7"
                android:layout_alignStart="@+id/chengdu_textView13"
                android:maxLines="1"
                android:text="为集游憩观赏和水上活动于一体的大型综合性生态" />

            <TextView
                android:id="@+id/tangshan_textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/chengdu_textView12"
                android:layout_marginBottom="115dp"
                android:text="开滦国家矿山公园" />

            <TextView
                android:id="@+id/tangshan_textView21"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tangshan_textView8"
                android:layout_alignParentStart="true"
                android:layout_marginStart="129dp"
                android:maxLines="1"
                android:text="以煤矿文化为主的一座大型主题公园。景区以设" />

            <TextView
                android:id="@+id/tangshan_textView22"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/chengdu_textView12"
                android:layout_marginBottom="34dp"
                android:text="清东陵" />

            <TextView
                android:id="@+id/tangshan_textView23"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/chengdu_textView13"
                android:maxLines="1"
                android:text="清东陵是清朝的帝王后妃陵墓群，位于" />


        </RelativeLayout>

    </FrameLayout>

</RelativeLayout>